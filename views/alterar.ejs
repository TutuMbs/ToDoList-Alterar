!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Atividades</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/estilos.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>

<body>
    <div class="container">
      <a href="/login" class="btn btn-danger logoff"><i class="bi bi-power"></i></a>
        <h1 class="text-center">Alterar Atividades</h1>
        <h3 class="text-center">Alterar: <%=nome%>
        </h3>
        <div class="row">
            <div class="col-sm text-center order-2">
                <h3 class="text-center">Cadastrar</h3>
                <form action="/atividades" method="post" class="form-control">
                    <input type="hidden" name="id" value="<%=id%>">
                    <input type="hidden" name="nome" value="<%=nome%>">
                    <div class="form-floating">
                        <input type="date" name="data" id="floatingSelect" class='form-control' placeholder="Data" value="<%=dados.data.toISOString().slice(0,10)%>" required>
                        <label for="floatingInput">Data Anterior:<%=dados.data.getDate()+1%>/<%=dados.data.getMonth()+1%>/<%=dados.data.getFullYear()%></label>
                    </div>
                    <div class="class form-floating">
                        <select name="tipo" id="floatingSelect" class="form-control">
                            <option value="Select"><%=dados.tipo%></option>
                            <option value="Ac">Ac</option>
                            <option value="At">At</option>
                            <option value="Rec">Rec</option>
                            <option value="Exame">Exame</option>
                        </select>
                        <label for="floatingSelect">Tipo de Atividade</label>
                    </div>
                     <div class="class form-floating">
                        <select name="disciplina" id="floatingSelect" class="form-control">
                            <option value="LP2"><%=dados.disciplina%></option>
                            <option value="BDS">Bds</option>
                            <option value="ANS">Ans</option>
                            <option value="MAT">Mat</option>
                            <option value="BIO">Bio</option>
                        </select>
                        <label for="floatingSelect">Disciplina</label>
                    </div>
                     <label for="" class="form-control">Como entregar:<%=dados.entrega%></label>    
                    <input type="radio" name="entrega" class="form-check-input" id="" value="tarefa">Tarefa no Teams
                    <input type="radio" name="entrega" class="form-check-input" id="" value="chat">Chat do Teams
                    <input type="radio" name="entrega" class="form-check-input" id="" value="email">Email
                    <input type="radio" name="entrega" class="form-check-input" id="" value="formulario">Forms<br>
                    <label for="" class="form-control">Orientações:</label>
                    <textarea name="orientacao" id="" cols="30" rows="10" class="form-control"><%=dados.instrucoes%></textarea>
                    <input type="submit" value="Gravar" class="btn btn-danger">
                </form>
            </div>
            
            </div> 
        </div>
    </div>
</body>
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</html>